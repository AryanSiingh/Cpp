#include<iostream>
#define pi 3.14
using namespace std;


float circlearea(float  radius ){
    float area = pi * radius * radius;
    return area;

}


int main(){
    
    int  radius;
    cout << " Enter the value of radius: ";
    cin >> radius;
    float area = circlearea(radius);
    
    cout << "Area of circle is:" << area<<endl;
    
    }

    
  
  


     
  
 






